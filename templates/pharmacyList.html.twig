{% extends 'base.html.twig' %}

{% block title %}Pharmacy List{% endblock %}

{% block body %}


    <div class="row">
        {% for pharma in pharmacy %}
            <div class="card" style="width: 20rem;">
                <img class="card-img-top" src="{{ pharma.path }}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{ pharma.firstName }}</h5>
                    <p class="card-text">{{ pharma.lastName }}</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Opened In : {{ pharma.age | date("d/m/Y") }}</li>
                </ul>
                <div class="card-body">
                    <a href="{{ path('drug.list', {'id': pharma.id})}}" class="btn btn-primary">See Drugs</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/drug.css') }}">
{% endblock %}
