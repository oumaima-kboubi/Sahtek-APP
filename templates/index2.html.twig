</script>
<script src="{{ asset('statPham/vendor/counter-up/jquery.waypoints.min.js') }}"></script>
<script src="{{ asset('statPham/vendor/counter-up/jquery.counterup.min.js') }}">
</script>
<script src="{{ asset('statPham/vendor/circle-progress/circle-progress.min.js') }}"></script>
<script src="{{ asset('statPham/vendor/perfect-scrollbar/perfect-scrollbar.js') }}"></script>
<script src="{{ asset('statPham/vendor/chartjs/Chart.bundle.min.js') }}"></script>
<script src="{{ asset('statPham/vendor/select2/select2.min.js') }}">
</script>

<!-- Main JS-->
<script src="{{ asset('main.js') }}"></script>

</body>

</html>
