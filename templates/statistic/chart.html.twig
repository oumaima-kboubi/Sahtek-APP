{% extends 'statistic/baseStatistic.html.twig' %}

{% block title %}Charts!{% endblock %}

{% block body %}
    <!-- Page Wrapper -->
    <div id="wrapper">



        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Charts</h1>
                    <p class="mb-4" ><a href="{{ path('routing.homeIn') }}">Go To Lobby</a></p>

                    <!-- Content Row -->
                    <div class="row">

                        <div class="col-xl-8 col-lg-7">

                            <!-- Area Chart -->
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">Earnings Overview (This Year)
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="chart-area">
                                        <canvas id="myAreaChart" data-entry-info="{{ yearly |json_encode }}" ></canvas>
                                    </div>
                                    <hr>
                                    Here we can find the earnings of the application in the past Year
                                </div>
                            </div>
                        </div>

                        <!-- Donut Chart -->
                        <div class="col-xl-4 col-lg-5">
                            <div class="card shadow mb-4">
                                <!-- Card Header - Dropdown -->
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">Gender percentage</h6>
                                </div>
                                <!-- Card Body -->
                                <div class="card-body">
                                    <div class="chart-pie pt-4">
                                        {% set entryInfo = {
                                            female: numberFemale,
                                            male: numberMale,
                                            number: numbers,
                                        } %}
                                        <canvas id="myPieChart" data-entry-info="{{ entryInfo |json_encode }}" ></canvas>
                                    </div>
                                    <hr>
                                    Here we can find Gender Percentages of the users in our site.
                                </div>
                            </div>
                        </div>

                            <!-- Bar Chart -->
                        <div class="col-xl-8 col-lg-7">
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">First Semester Earnings</h6>
                                </div>
                                <div class="card-body">
                                    <div class="chart-bar">
                                        <canvas id="myBarChart"  data-entry-info="{{ yearly |json_encode }}"></canvas>
                                    </div>
                                    <hr>
                                    Here we can find monthly earning of the first semester in the current year.
                                </div>
                            </div>

                        </div>


                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
{% endblock %}

{% block javascripts %}
    <!-- Bootstrap core JavaScript-->
    <script src="{{ asset('stat/vendor/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('stat/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>

    <!-- Core plugin JavaScript-->
    <script src="{{ asset('stat/vendor/jquery-easing/jquery.easing.min.js') }}"></script>

    <!-- Custom scripts for all pages-->
    <script src="{{ asset('stat/js/sb-admin-2.min.js') }}"></script>

    <!-- Page level plugins -->
    <script src="{{ asset('stat/vendor/chart.js/Chart.min.js') }}"></script>

    <!-- Page level custom scripts -->
    <script src="{{ asset('chart-area-demo.js') }}"></script>
    <script src="{{ asset('chart-pie-demo.js') }}" type="text/javascript"></script>
    <script src="{{ asset('chart-bar-demo.js') }}"></script>
{% endblock %}